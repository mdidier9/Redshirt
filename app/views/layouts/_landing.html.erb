<h1>Welcome to Redshirt!</h1>


<div class="login">
	<h3>Login Here</h3>
  <%= form_tag('/sessions', method: "post") do %>
    <div>
      <%= label_tag "Email:" %>
      <%= text_field_tag :email, nil, class: "field" %>
    </div>
    <div>
      <%= label_tag "Password:" %>
      <%= password_field_tag :password, nil, class: "field" %>
    </div>
    <div>
      <%= submit_tag "Sign In", class: "button signin_button" %>
    </div>
  <% end %>
</div>

<div class="create">
  <h2>New to Redshirt?...<br><span>
  <%= link_to "Create New Account", new_player_path %>  
  </span>
  </h2>
</div>